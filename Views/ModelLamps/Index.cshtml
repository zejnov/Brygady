@model IEnumerable<Brygady2.Models.ModelLamp>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Dodaj nowy model lampy</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdModelLamp">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.IdModelLamp">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.IdModelLamp">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
